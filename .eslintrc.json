{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 3],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": ["warn"]
  },
  "globals": {
    "getCart": "readonly",
    "saveCart": "readonly",
    "addToCart": "readonly",
    "removeFromCart": "readonly",
    "updateQty": "readonly",
    "updateCartCounter": "readonly"
  }
}

